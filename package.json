{
	"name": "zmk",
	"displayName": "zmk",
	"description": "Zodiac Make",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onCommand:extension.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.zmkConfig",
				"title": "Update ZMK config"
			}
		],
		"configuration": {
			"title": "zmk",
			"properties": {
				"zmk.rootDir": {
					"type": "string",
					"default": "<no-root-dir>",
					"description": "zmk root folder."
				},
				"zmk.buildDir": {
					"type": "string",
					"default": "<no-build-dir>",
					"description": "zmk root folder."
				},
				"zmk.config": {
					"type": "string",
					"default": "dev",
					"description": "zmk config name."
				},
				"zmk.target": {
					"type": [
						"string",
						"null"
					],
					"default": null,
					"description": "Ninja target to build."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}